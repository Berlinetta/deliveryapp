<import src="../../packages/wux/gallery/gallery.wxml" />

<template is="gallery" data="{{ ...$wux.gallery }}" />

<view class="page">
  <view class="page__bd pagecontent">
    <view class="weui-cells__title"></view>
    <view class="weui-cells weui-cells_after-title">

      <view class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>

      <view class='personal-info'>
        <iNavigator url="../manageSellers/manageSellers" title="姓名" subtitle="王某某" />
        <iNavigator url="../manageSellers/manageSellers" title="角色" subtitle="管理员" />
        <iNavigator url="../manageSellers/manageSellers" title="手机" subtitle="13555666666" />
        <iNavigator url="../newOrder/newOrder" title="新建订单" />
        <iNavigator url="../newMember/newMember" title="添加用户" />
      </view>

      <view class='manage'>
        <view class="weui-cells__title">系统管理</view>
        <view class="page__bd">
          <view class="weui-grids">
            <block wx:for="{{manageActions}}" wx:key="{{index}}">
              <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
                  <image class="weui-grid__icon img" src="{{ item.imageUrl }}" />
                  <view class="weui-grid__label">{{item.text}}</view>
                </navigator>
            </block>
          </view>
        </view>
      </view>

    </view>
  </view>
</view>