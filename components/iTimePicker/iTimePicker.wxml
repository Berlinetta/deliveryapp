<view class="weui-cell weui-cell_input">
  <view class="weui-cell__hd">
    <view class="weui-label">{{title}}
      <text wx:if="{{required}}" class="required-field"> (必填)</text>
      <text wx:else></text>
    </view>
  </view>
  <view class="weui-cell__bd">
    <picker mode="time" value="{{value}}" start="{{startTime}}" end="{{endTime}}" bindchange="updateValue">
      <view class="weui-input">{{value}}</view>
    </picker>
  </view>
</view>