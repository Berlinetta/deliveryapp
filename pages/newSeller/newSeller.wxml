<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">新建销售人员</view>
    <view class="weui-cells weui-cells_after-title">

      <iText name="name" title="姓名" placeholder="请输入姓名" />
      <iTelephone name="telephone" placeholder="请输入号码" />
      <iText name="account" title="账号" placeholder="请输入账号" />
      <iText name="password" title="密码" placeholder="请输入密码" />
      <iText name="confirmPassword" title="确认密码" placeholder="请输入确认密码" />
      <view style='padding-top:10px'>
        <button class="weui-btn" type="primary" bindtap="showTopTips">提交</button>
      </view>
      <view style='padding-top:3px'>
        <button class="weui-btn" type="warn">放弃</button>
      </view>

    </view>
  </view>
</view>